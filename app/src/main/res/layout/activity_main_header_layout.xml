<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="200dp"    android:background="@drawable/rain"    android:gravity="center"    android:orientation="vertical">    <com.jay.commonview.CircleImageView        android:id="@+id/main_user_icon"        android:layout_width="90dp"        android:layout_height="90dp"        android:clickable="true"        android:src="@drawable/hugh"        app:civ_border_color="@color/gray"        app:civ_border_width="1dp" />    <TextView        android:id="@+id/main_user_name"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="10dp"        android:gravity="center"        android:text="你的名字"        android:textColor="@android:color/white"        android:textSize="18sp" /></LinearLayout>